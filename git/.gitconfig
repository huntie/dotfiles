[commit]
    gpgsign = true
[status]
    showUntrackedFiles = all
[push]
    default = simple
[alias]
    s = status
    d = diff
    dc = diff --cached
    l = log
    a = add
    c = commit
    ca = commit --amend
    cn = commit --amend --no-edit
    ch = checkout
    cp = cherry-pick
    undo = reset HEAD^
    clean = reset HEAD --hard
    unstage = reset HEAD
    discard = checkout --
    pushf = push --force-with-lease
    publish = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
[core]
    excludesfile = ~/.gitignore
